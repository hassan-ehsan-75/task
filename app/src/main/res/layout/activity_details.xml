<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_background"
    tools:context=".ui.DetailsActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_background">
    <LinearLayout
        android:id="@+id/app_ba"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/black"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/app_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="12dp"
                        android:layout_weight="0"
                        android:src="@drawable/ic_back"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingEnd="42dp"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"
                        android:textSize="28dp"
                        android:text="Details"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/details_from_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:padding="16dp"
        android:background="@drawable/round_boarder_btn"
        app:layout_constraintTop_toBottomOf="@+id/app_ba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/details_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="From"/>
        <TextView
            android:id="@+id/details_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="To"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/details_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:padding="16dp"
        android:background="@drawable/round_boarder_btn"
        app:layout_constraintTop_toBottomOf="@+id/details_from_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="Goods to deliver"/>
        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/details_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="To"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/details_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:padding="16dp"
        android:background="@drawable/round_boarder_btn"
        app:layout_constraintTop_toBottomOf="@+id/details_goods"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/details_delivery_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="Goods to deliver"/>
    </LinearLayout>

    <Button
        android:id="@+id/details_add_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:background="@drawable/round_boarder_btn"
        android:drawableEnd="@drawable/ic_fav_off"
        android:drawablePadding="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingStart="50dp"
        android:text="Add to favorites"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_fee" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>